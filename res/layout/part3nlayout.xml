<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Challenge1_Activity" >

   

    <Button
        android:id="@+id/term_and_whole_life_insurance"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/challenge1"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="70dp"
        android:drawableBottom="@drawable/vidicon"
        android:text="@string/term_and_whole_life_ins"
        android:textColor="#0A2A0A"
        android:textSize="20sp" />

    <Button
        android:id="@+id/challenge1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/term_and_whole_life_insurance"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="50dp"
        android:drawableBottom="@drawable/star"
        android:text="@string/challenge_1"
        android:textColor="#0A2A0A"
        android:textSize="20sp" />

    <Button
        android:id="@+id/term_and_whole_policies"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/challenge1"
        android:layout_alignBottom="@+id/challenge1"
        android:layout_centerHorizontal="true"
        android:drawableBottom="@drawable/vidicon"
        android:text="@string/term_and_whole_pol" 
        android:textColor="#0A2A0A"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/term_and_whole_pol_2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/term_and_whole_life_insurance"
        android:layout_alignBottom="@+id/term_and_whole_life_insurance"
        android:layout_centerHorizontal="true"
        android:drawableBottom="@drawable/vidicon"
        android:text="@string/term_and_whole_pol_2_text"
        android:textColor="#0A2A0A"
        android:textSize="20sp"
         />

    <Button
        android:id="@+id/death_probability"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/term_and_whole_policies"
        android:layout_alignParentRight="true"
        android:drawableBottom="@drawable/vidicon"
        android:text="@string/death_prob"
        android:textColor="#0A2A0A"
        android:textSize="20sp" />

    <Button
        android:id="@+id/money_lessons"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/term_and_whole_pol_2"
        android:layout_alignBottom="@+id/term_and_whole_pol_2"
        android:layout_alignRight="@+id/death_probability"
        android:layout_marginRight="67dp"
        android:drawableBottom="@drawable/docpdf"
        android:text="@string/money_lesson"
        android:textColor="#0A2A0A"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/more_info_about_challenge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/term_and_whole_life_insurance"
        android:layout_below="@+id/challenge1"
        android:text="@string/more_info_abt_challenge1"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/more_info_about_term_and_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/term_and_whole_life_insurance"
        android:layout_below="@+id/term_and_whole_life_insurance"
        android:text="@string/more_info_abt_term_and_whole"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/more_info_about_term_and_whole_life_ins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/more_info_about_challenge1"
        android:layout_alignBottom="@+id/more_info_about_challenge1"
        android:layout_centerHorizontal="true"
        android:text="@string/more_info_abt_term_and_whole_life_ins"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
/>

    <TextView
        android:id="@+id/more_info_about_term_and_whole_life_part2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/more_info_about_term_and_whole"
        android:layout_alignBottom="@+id/more_info_about_term_and_whole"
        android:layout_centerHorizontal="true"
        android:text="@string/more_info_abt_term_and_whole_life_part2"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
         />

    <TextView
        android:id="@+id/more_info_about_death_probability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/more_info_about_term_and_whole_life_ins"
        android:layout_alignBottom="@+id/more_info_about_term_and_whole_life_ins"
        android:layout_alignRight="@+id/death_probability"
        android:layout_marginRight="37dp"
        android:text="@string/more_info_abt_death_prob"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/more_info_about_money_lessons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/more_info_about_term_and_whole_life_part2"
        android:layout_alignBottom="@+id/more_info_about_term_and_whole_life_part2"
        android:layout_alignRight="@+id/death_probability"
        android:text="@string/more_info_abt_money_lessons"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
    
    </RelativeLayout>